generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Coin {
  id           String   @id @default(cuid())
  cgId         String   @unique   // CoinGecko coin id, e.g. "bitcoin"
  symbol       String
  name         String
  image        String?
  marketCap    Float?
  price        Float?
  volume24h    Float?
  change24hPct Float?
  lastSyncedAt DateTime @default(now())

  prices Price[]
}

model Price {
  id        String   @id @default(cuid())
  coinId    String
  ts        DateTime
  price     Float

  coin      Coin     @relation(fields: [coinId], references: [id])

  @@unique([coinId, ts])
}
